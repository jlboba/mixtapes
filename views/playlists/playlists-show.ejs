<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%=playlist.title%> | MIXTAPES</title>
  </head>
  <body>
    <h1><%=playlist.title%></h1>
    <img src="<%=playlist.coverImage%>">
    <p>
      created by: <a href="/users/<%=user.id%>"><%=playlist.creator%></a><br />
      likes: <%=playlist.likes%><br/>
      <%=playlist.description%>
    </p>
    <ul>
      <% for(var i = 0; i < playlist.songs.title.length; i++){ %>
          <li>
            <a href="<%=playlist.songs.link[i]%>"><%=playlist.songs.title[i]%> - <%=playlist.songs.artist[i]%></a>
            <p>
              <%=playlist.songs.description[i]%>
            </p>
          </li>
      <% } %>
    </ul>
    <h2>COMMENTS</h2>
    <ul>
      <% for(var i = 0; i < playlist.comments.length; i++){ %>
          <li>
            <%=playlist.comments[i].author%> said: <%=playlist.comments[i].body%>
          </li>
      <% } %>
    </ul>
    <% if(currentUser) {%>
      <h2>LEAVE A COMMENT!</h2>
      <form action="/playlists/comment/<%=playlist.id%>" method="POST">
        <img src="<%=currentUser.icon%>" style="width: 100px; height: 100px;"> <small><%=currentUser.username%></small>
        <textarea name="body" placeholder="comment"></textarea>
        <input type="submit" value="submit" />
      </form>
      <% if(currentUser.username === playlist.creator) { %>
        <a href="/playlists/<%=playlist.id%>/edit">EDIT</a>
        <form action="/playlists/<%=playlist.id%>?_method=DELETE" method="POST">
          <input type="submit" value="DELETE" />
        </form>
      <% } %>
    <% } %>
    <form action="/playlists/like/<%=playlist.id%>?_method=PUT" method="POST">
      <input type="submit" value="LIKE &hearts;" />
    </form>
  </body>
</html>
