<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
      <form action="/playlists" method="POST">
        <input type="text" name="title" placeholder="title">
        <select name="creator">
          <% for(var i = 0; i < users.length; i++) { %>
              <option>
                <%=users[i].username%>
              </option>
          <% } %>
        </select>
        <input type="text" name="coverImage" placeholder="mixtape cover image url">
        <input type="text" name="description" placeholder="description">
        <input type="checkbox" name="privOrPub" /> I want this playlist to be public
        <input type="submit" value="CREATE" />
      </form>
  </body>
</html>
